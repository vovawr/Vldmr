<Window x:Class="Vldmr.RegWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vldmr"
        mc:Ignorable="d"
        Title="RegWindows" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Margin="10">Придумайте имя пользователя</Label>
            <TextBox Margin="10" Name="tbName"></TextBox>
            <Label Margin="10">Придумайте пороль</Label>
            <TextBox Margin="10" Name="tbPassword"></TextBox>
            <Button Margin="10" Name="Reg" Click="Reg_Click">Зарегистрироваться</Button>
        </StackPanel>
    </Grid>
</Window>
